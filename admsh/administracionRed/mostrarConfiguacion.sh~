#!/bin/bash
echo "Configuracion ip de la maquina"
ip a
if [ "$?" != "0" ]; then
    echo "Se ha producido un error."
    read -p "Aplaste ENTER para volver."
    echo "[X] `date +'%F %T'`: Mostrar configuracion ip" >> "`cat configuracion/ubicacionLog.conf`/audit.log"
else
    read -p "Aplaste ENTER para volver."
    echo "[O] `date +'%F %T'`: Mostrar configuracion ip" >> "`cat configuracion/ubicacionLog.conf`/audit.log"
fi
